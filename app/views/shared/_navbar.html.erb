<div class="navbar">
  <div class="container top-line h-100 <%= @dark_mode ? 'dark-border' : 'light-border' %>">
    <div class="d-flex justify-content-center align-items-center w-100">
      <%= link_to switch_mode_path, method: :post do %>
        <div class="logo-flip">
          <div class="logo-flip-inner">
            <div class="logo-flip-front">
              <%= image_tag "#{@dark_mode ? 'dark-logo.png' : 'logo.png'}" %>
            </div>
            <div class="logo-flip-back">
               <%= image_tag "#{@dark_mode ? 'logo.png' : 'dark-logo.png'}" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
